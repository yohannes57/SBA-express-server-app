<!-- src/views/list.ejs -->
<%- include('layout', { title: 'Vegetable List' , content:' '}) %>
    <div class="card-container">
        <% nonvege.forEach(function(veg) { %>
            <div class="card">
                <a href="/nonvege/<%= veg._id %>">
                    <img src="<%= veg.image %>" alt="<%= veg.name %>" class="card-img">
                    <div class="card-content">
                        <h2 class="card-title">
                            <%= veg.name %>
                        </h2>
                        <p class="card-price">$<%= veg.price %>
                        </p>
                    </div>
                </a>
                <div class="card-actions">
                    <a href="/nonvege/<%= veg._id %>/edit" class="btn-edit">Edit</a>
                    <form action="/nonvege/<%= veg._id %>?_method=DELETE" method="POST" class="inline-form">
                        <button type="submit" class="btn-delete">Delete</button>
                    </form>
                </div>
            </div>
            <% }); %>
    </div>
