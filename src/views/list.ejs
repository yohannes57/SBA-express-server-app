<!-- src/views/list.ejs -->
<%- include('layout', { title: 'Home' , content:' '}) %>
    <div class="card-container">
        <% vege.forEach(function(veg) { %>
            <div class="card">
                <a href="/vege/<%= veg._id %>">
                    <img src="<%= veg.image %>" alt="<%= veg.name %>" class="card-img">
                    <div class="card-content">
                        <h2 class="card-title">
                            <%= veg.name %>
                        </h2>
                        <p class="card-price">$<%= veg.price %>
                        </p>
                    </div>
                </a>
                <div class="card-actions">
                    <a href="/vege/<%= veg._id %>/edit" class="btn-edit">Edit</a>
                    <a href="/vege/<%= veg._id %>/delete" class="btn-delete">Delete</a>
                </div>
            </div>
            <% }); %>
    </div>
    <a href="/vege/add" class="btn-add-new">Add New Vegetable</a>
    